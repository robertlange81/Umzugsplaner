<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/detail_deadline_buttons"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/detail_row_height"
            android:minHeight="@dimen/detail_row_height"
            android:gravity="top"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2">

            <ImageView android:layout_width="wrap_content"
                android:id="@+id/introIcon"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_launcher"
                android:layout_height="wrap_content"
                android:scaleType="centerInside" />
            <TextView
                android:id="@+id/splash_title"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:gravity="center|center_vertical"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff33ee33"
                android:textSize="@dimen/detail_header_row_height" />
        </TableRow>

        <ProgressBar
            android:id="@+id/progressBar"
            android:background="@android:color/transparent"
            style="?android:attr/progressBarStyle"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside" />
    </LinearLayout>




</RelativeLayout>