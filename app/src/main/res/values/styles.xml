<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">0dp</item>
        <!--item name="android:background_detail">#FF0000</item-->
        <item name="android:minWidth">0dip</item>
        <item name="android:textSize">18dip</item>
        <!--item name="android:maxWidth">3dip</item-->
        <!--item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingEnd">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="listPreferredItemPaddingLeft">0dp</item-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_menu_view</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">""</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="input_label">
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:layout_marginLeft">@dimen/input_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="ActionButtonStyle" parent="android:Widget.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:maxWidth">10dip</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingEnd">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="listPreferredItemPaddingLeft">5dp</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

</resources>
