<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Fragments.TaskDetailFragment"
    android:id="@+id/detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="@dimen/introTopMargin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ScrollView
                android:layout_width="fill_parent"
                android:paddingTop="25sp"
                android:paddingBottom="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/introOverviewMarginLR"
                        android:layout_marginRight="@dimen/introOverviewMarginLR"
                        android:layout_marginStart="@dimen/introOverviewMarginLR"
                        android:layout_marginLeft="@dimen/introOverviewMarginLR"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/intro_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif-monospace"
                            android:gravity="center|center_vertical"
                            android:maxLines="1"
                            android:text="@string/app_name"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ff33ee33"
                            android:textStyle="bold"
                            android:textSize="@dimen/detail_header_row_height" />
                        <TextView
                        android:id="@+id/intro_description"
                        android:inputType="textMultiLine"
                        android:fontFamily="serif-monospace"
                        android:layout_marginTop="20dp"
                        android:text="@string/introDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|center_horizontal"
                        android:lineHeight="@dimen/detail_spinner_text_size"
                        android:singleLine="false"
                        android:textSize="@dimen/headline_text_size"
                        android:textColor="#ffffffff"
                        android:selectAllOnFocus="true" />
                        <TextView
                            android:id="@+id/intro_description2"
                            android:paddingTop="10sp"
                            android:inputType="textMultiLine"
                            android:fontFamily="serif-monospace"
                            android:layout_marginTop="20dp"
                            android:text="@string/introDesc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|center_horizontal"
                            android:lineHeight="@dimen/detail_spinner_text_size"
                            android:singleLine="false"
                            android:textSize="@dimen/headline_text_size"
                            android:textColor="#ffffffff"
                            android:selectAllOnFocus="true" />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>