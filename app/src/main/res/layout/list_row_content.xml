<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_row_content"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:descendantFocusability="blocksDescendants"
    android:padding="3dip">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2sp"
        android:layout_marginRight="4sp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:buttonTint="@drawable/checkbox_state_list" />


    <TableRow
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/checkBox"
        android:gravity="top"
        android:weightSum="10">

        <TextView
            android:id="@+id/name"
            android:layout_height="match_parent"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:layout_toRightOf="@id/checkBox"
            android:layout_weight="5"
            android:gravity="center"
            android:lineSpacingExtra="2sp"
            android:maxLines="2"
            android:text="@string/placeholder_name"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_fav_haupt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dip"
            android:layout_toLeftOf="@id/meta"
            android:adjustViewBounds="false"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/meta"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="5"
            android:descendantFocusability="blocksDescendants"
            android:gravity="top">

            <TextView
                android:id="@+id/typ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:layout_marginRight="1dip"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/placeholder_type"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffeaefff" />

            <TextView
                android:id="@+id/termin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/typ"
                android:layout_marginTop="1dip"
                android:layout_marginRight="1dip"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/placeholder_date"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff33ee33" />

            <TextView
                android:id="@+id/kosten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/termin"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dip"
                android:adjustViewBounds="true"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/placeholder_costs"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffaa" />
        </RelativeLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/delete_task_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="2dip"
            android:layout_toRightOf="@id/table"
            android:adjustViewBounds="false"
            app:srcCompat="@android:drawable/ic_delete" />

    </TableRow>
</RelativeLayout>