<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TaskDetailFragment"
    android:id="@+id/detail">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_header"
        android:layout_below="@id/app_bar"
        android:background="@drawable/detail_header"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/detail_name"
            android:hint="@string/placeholder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingTop="10sp"
            android:selectAllOnFocus="true"
            android:inputType="text" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="5dp"
            android:weightSum="3">

        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/detail_isDone"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:button="@null"
                android:gravity="left|center"
                android:hint="@string/done"
                android:layout_width="wrap_content"
                android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                android:layout_height="wrap_content" />
        </TableRow>

            <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_weight="1"
                android:layout_marginRight="5sp"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detail_prio_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginRight="6sp"
                    android:textSize="16sp"
                    android:gravity="right|center"
                    android:text="@string/normalPrioText_short" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/detail_prio"
                    android:hint="@string/placeholder_settings"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2sp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

            </TableRow>


        </TableRow>

    </LinearLayout>

    <TableRow
        android:id="@+id/detail_first_line"
        android:layout_below="@id/detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:weightSum="3">

            <TextView
                android:id="@+id/detail_type_label"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_margin"
                android:text="@string/category" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/detail_type"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </TableRow>

    <TableRow
        android:id="@+id/detail_second_line"
        android:layout_below="@id/detail_first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="15dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/detail_description_label"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/input_margin"
            android:text="@string/placeholder_description" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/detail_description"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:selectAllOnFocus="true"
            android:inputType="text"/>

    </TableRow>

    <TableRow
        android:id="@+id/detail_third_line"
        android:layout_below="@id/detail_second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="15dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/detail_costs_label"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/input_margin"
            android:text="@string/placeholder_costs" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/detail_costs"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:hint="@string/placeholder_costs_detail"
            android:inputType="numberDecimal"/>

    </TableRow>

    <TableRow
        android:id="@+id/detail_fourth_line"
        android:layout_below="@id/detail_third_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="15dp"
        android:weightSum="8">

        <EditText
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/detail_date"
            android:hint="@string/placeholder_date"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_height="match_parent"
            android:text="@string/placeholder_date_detail"
            android:id="@+id/detail_btn_date"
            android:layout_weight="3"
            android:layout_alignBottom="@+id/detail_date"
            android:layout_toRightOf="@+id/detail_date"
            android:layout_toEndOf="@+id/detail_date" />

        <Button
            android:layout_height="match_parent"
            android:text="@string/placeholde_time_detail"
            android:layout_weight="3"
            android:id="@+id/detail_btn_time"
            android:layout_toRightOf="@+id/detail_btn_date"/>


    </TableRow>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/calculate"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
